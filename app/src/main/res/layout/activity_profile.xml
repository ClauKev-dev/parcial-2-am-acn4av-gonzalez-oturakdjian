<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light">

    <!-- ScrollView for profile content -->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="@dimen/login_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Section -->
            <LinearLayout
                android:id="@+id/ll_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/login_spacing_large"
                android:orientation="vertical"
                android:gravity="center">

                <!-- Profile Icon -->
                <ImageView
                    android:id="@+id/iv_profile_icon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="@dimen/login_spacing_medium"
                    android:contentDescription="@string/perfil"
                    android:src="@drawable/ic_person"
                    app:tint="@color/primary_green"
                    tools:ignore="ImageContrastCheck" />

                <!-- Title -->
                <TextView
                    android:id="@+id/tv_profile_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_title"
                    android:textColor="@color/black"
                    android:textSize="@dimen/login_title_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- User Info Section -->
            <LinearLayout
                android:id="@+id/ll_user_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/login_spacing_large"
                android:orientation="vertical">

        <!-- Name Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/login_spacing_medium"
            android:background="@drawable/input_background"
            android:orientation="vertical"
            android:padding="@dimen/login_input_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_name"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/login_spacing"
                android:text="Cargando..."
                android:textColor="@color/black"
                android:textSize="@dimen/login_text_size"
                android:textStyle="bold" />

            <!-- EditText for name (shown in edit mode) -->
            <EditText
                android:id="@+id/et_user_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_input_height"
                android:layout_marginTop="@dimen/login_spacing"
                android:background="@drawable/input_background"
                android:hint="@string/name_hint"
                android:inputType="textPersonName"
                android:padding="@dimen/login_input_padding"
                android:textColor="@color/black"
                android:textColorHint="@color/text_hint"
                android:textSize="@dimen/login_text_size"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Email Card -->

                <!-- Phone Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/login_spacing_medium"
                    android:background="@drawable/input_background"
                    android:orientation="vertical"
                    android:padding="@dimen/login_input_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_email"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_user_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/login_spacing"
                        android:text="Cargando..."
                        android:textColor="@color/black"
                        android:textSize="@dimen/login_text_size"
                        android:textStyle="bold" />

                    <!-- EditText for email (shown in edit mode) -->
                    <EditText
                        android:id="@+id/et_user_email"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/login_input_height"
                        android:layout_marginTop="@dimen/login_spacing"
                        android:background="@drawable/input_background"
                        android:hint="@string/email_hint"
                        android:inputType="textEmailAddress"
                        android:padding="@dimen/login_input_padding"
                        android:textColor="@color/black"
                        android:textColorHint="@color/text_hint"
                        android:textSize="@dimen/login_text_size"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/login_spacing_medium"
            android:background="@drawable/input_background"
            android:orientation="vertical"
            android:padding="@dimen/login_input_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_phone"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_user_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/login_spacing"
                android:text="Cargando..."
                android:textColor="@color/black"
                android:textSize="@dimen/login_text_size"
                android:textStyle="bold" />

            <!-- EditText for phone (shown in edit mode) -->
            <EditText
                android:id="@+id/et_user_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_input_height"
                android:layout_marginTop="@dimen/login_spacing"
                android:background="@drawable/input_background"
                android:hint="@string/phone_hint"
                android:inputType="phone"
                android:padding="@dimen/login_input_padding"
                android:textColor="@color/black"
                android:textColorHint="@color/text_hint"
                android:textSize="@dimen/login_text_size"
                android:visibility="gone" />
        </LinearLayout>

        <!-- DNI Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/login_spacing_medium"
            android:background="@drawable/input_background"
            android:orientation="vertical"
            android:padding="@dimen/login_input_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_dni"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_user_dni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/login_spacing"
                android:text="Cargando..."
                android:textColor="@color/black"
                android:textSize="@dimen/login_text_size"
                android:textStyle="bold" />

            <!-- EditText for DNI (shown in edit mode) -->
            <EditText
                android:id="@+id/et_user_dni"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_input_height"
                android:layout_marginTop="@dimen/login_spacing"
                android:background="@drawable/input_background"
                android:hint="@string/dni_hint"
                android:inputType="number"
                android:padding="@dimen/login_input_padding"
                android:textColor="@color/black"
                android:textColorHint="@color/text_hint"
                android:textSize="@dimen/login_text_size"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Address Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/login_spacing_medium"
            android:background="@drawable/input_background"
            android:orientation="vertical"
            android:padding="@dimen/login_input_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_address"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_user_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/login_spacing"
                android:text="Cargando..."
                android:textColor="@color/black"
                android:textSize="@dimen/login_text_size"
                android:textStyle="bold" />

            <!-- EditText for address (shown in edit mode) -->
            <EditText
                android:id="@+id/et_user_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_input_height"
                android:layout_marginTop="@dimen/login_spacing"
                android:background="@drawable/input_background"
                android:hint="@string/address_hint"
                android:inputType="textPostalAddress"
                android:padding="@dimen/login_input_padding"
                android:textColor="@color/black"
                android:textColorHint="@color/text_hint"
                android:textSize="@dimen/login_text_size"
                android:visibility="gone" />
        </LinearLayout>
            </LinearLayout>

            <!-- Bottom Buttons Section -->
            <LinearLayout
                android:id="@+id/ll_bottom_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/login_spacing_large"
                android:orientation="vertical">

                <!-- Edit/Save/Cancel Buttons -->
                <Button
                    android:id="@+id/btn_edit_profile"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_button_height"
                    android:layout_marginBottom="@dimen/login_spacing"
                    android:backgroundTint="@color/primary_green_dark"
                    android:text="@string/edit_profile"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Save and Cancel buttons (shown in edit mode) -->
                <LinearLayout
                    android:id="@+id/ll_edit_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/btn_save_profile"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/login_button_height"
                        android:layout_marginEnd="@dimen/login_spacing"
                        android:layout_weight="1"
                        android:backgroundTint="@color/primary_green_dark"
                        android:text="@string/save_profile"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_cancel_edit"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/login_button_height"
                        android:layout_weight="1"
                        android:backgroundTint="@color/primary_green_dark"
                        android:text="@string/cancel_edit"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Logout Button -->
                <Button
                    android:id="@+id/btn_logout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_button_height"
                    android:layout_marginTop="@dimen/login_spacing"
                    android:layout_marginBottom="@dimen/login_spacing_large"
                    android:backgroundTint="@color/primary_green_dark"
                    android:text="@string/logout_button"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/bottom_navigation"
        layout="@layout/bottom_navigation_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>

