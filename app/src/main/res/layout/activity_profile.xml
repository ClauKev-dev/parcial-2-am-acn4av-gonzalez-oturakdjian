<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light"
    android:padding="@dimen/login_padding">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/login_spacing_large"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Profile Icon -->
        <ImageView
            android:id="@+id/iv_profile_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="@dimen/login_spacing_medium"
            android:contentDescription="@string/perfil"
            android:src="@drawable/ic_person"
            app:tint="@color/primary_green"
            tools:ignore="ImageContrastCheck" />

        <!-- Title -->
        <TextView
            android:id="@+id/tv_profile_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_title"
            android:textColor="@color/black"
            android:textSize="@dimen/login_title_size"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- User Info Section -->
    <LinearLayout
        android:id="@+id/ll_user_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/login_spacing_large"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_header">

        <!-- Name Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/login_spacing_medium"
            android:background="@drawable/input_background"
            android:orientation="vertical"
            android:padding="@dimen/login_input_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_name"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/login_spacing"
                android:text="Cargando..."
                android:textColor="@color/black"
                android:textSize="@dimen/login_text_size"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Email Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/login_spacing_medium"
            android:background="@drawable/input_background"
            android:orientation="vertical"
            android:padding="@dimen/login_input_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_email"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/login_spacing"
                android:text="Cargando..."
                android:textColor="@color/black"
                android:textSize="@dimen/login_text_size"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Phone Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/login_spacing_medium"
            android:background="@drawable/input_background"
            android:orientation="vertical"
            android:padding="@dimen/login_input_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_phone"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_user_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/login_spacing"
                android:text="Cargando..."
                android:textColor="@color/black"
                android:textSize="@dimen/login_text_size"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- Logout Button -->
    <Button
        android:id="@+id/btn_logout"
        android:layout_width="0dp"
        android:layout_height="@dimen/login_button_height"
        android:layout_marginTop="@dimen/login_spacing_large"
        android:background="@drawable/button_selector"
        android:text="@string/logout_button"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_user_info" />

</androidx.constraintlayout.widget.ConstraintLayout>

