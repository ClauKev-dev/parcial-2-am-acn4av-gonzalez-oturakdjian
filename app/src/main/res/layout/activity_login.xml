<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light"
    android:padding="@dimen/login_padding">

    <!-- Logo/Image Section -->
    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="@dimen/login_logo_size"
        android:layout_height="@dimen/login_logo_size"
        android:layout_marginTop="@dimen/login_margin_top"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_store"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/primary_green"
        tools:ignore="ImageContrastCheck" />

    <!-- Title Section -->
    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/login_spacing_large"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_logo">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_title"
            android:textColor="@color/black"
            android:textSize="@dimen/login_title_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_spacing"
            android:text="@string/login_subtitle"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/login_subtitle_size" />
    </LinearLayout>

    <!-- Form Section -->
    <LinearLayout
        android:id="@+id/ll_form"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/login_spacing_large"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_title">

        <!-- Email Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/login_input_margin"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_input_height"
                android:background="@drawable/input_background"
                android:hint="@string/email_hint"
                android:inputType="textEmailAddress"
                android:padding="@dimen/login_input_padding"
                android:textColor="@color/black"
                android:textColorHint="@color/text_hint"
                android:textSize="@dimen/login_text_size" />

            <TextView
                android:id="@+id/tv_email_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/login_spacing"
                android:textColor="@color/error_red"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Password Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/login_input_margin"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_input_height"
                android:background="@drawable/input_background"
                android:hint="@string/password_hint"
                android:inputType="textPassword"
                android:padding="@dimen/login_input_padding"
                android:textColor="@color/black"
                android:textColorHint="@color/text_hint"
                android:textSize="@dimen/login_text_size" />

            <TextView
                android:id="@+id/tv_password_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/login_spacing"
                android:textColor="@color/error_red"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Forgot Password Link -->
        <TextView
            android:id="@+id/tv_forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="@dimen/login_spacing_medium"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            android:text="@string/forgot_password"
            android:textColor="@color/link_color"
            android:textSize="@dimen/login_text_size" />

        <!-- Login Button -->
        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_button_height"
            android:layout_marginTop="@dimen/login_spacing"
            android:background="@drawable/button_selector"
            android:text="@string/login_button"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Success Message -->
        <TextView
            android:id="@+id/tv_success_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/login_spacing_medium"
            android:textColor="@color/primary_green"
            android:textSize="@dimen/login_text_size"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Register Link Section -->
    <LinearLayout
        android:id="@+id/ll_register_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/login_spacing_large"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_form">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿No tienes cuenta? "
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/login_text_size" />

        <TextView
            android:id="@+id/tv_register_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:padding="4dp"
            android:text="Regístrate"
            android:textColor="@color/link_color"
            android:textSize="@dimen/login_text_size"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

